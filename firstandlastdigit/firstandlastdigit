import java.util.Scanner;

public class firstandlastdigit {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int T =sc.nextInt();
        for(int j=0;j<T;j++){
//            int n=sc.nextInt();
//            int [] array = new int[100];
//            int i=0;
//            while (n!=0){
