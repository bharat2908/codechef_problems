//            System.out.println(sum);
            int n=sc.nextInt();
            int last,sum = 0,rem,ans;
            last = n%10;
            while(n>0){
                sum = 0;
                rem = n%10;
                sum = sum+rem;
                n=n/10;
            }
            ans = last+sum;
            System.out.println(ans);

        }
    }
}
